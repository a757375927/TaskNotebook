<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/txtlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MyActivity">
        <TextView
            android:text="@string/title"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/datetime"
            android:text="@string/datetime"
            android:layout_marginTop="20dp"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/dateTimeTxt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/datetime"
            android:layout_width="150dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/taskInfo"
            android:layout_marginTop="20dp"
            android:layout_below="@id/datetime"
            android:text="@string/taskInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_below="@id/dateTimeTxt"
            android:layout_toRightOf="@id/taskInfo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/taskInfoTxt"
            android:layout_width="150dp"
            android:layout_height="30dp" />
        </RelativeLayout>


    <Button
        android:id="@+id/commitBtn"
        android:text="@string/commit"
        android:layout_below="@id/txtlay"
        android:layout_width="80dp"
        android:layout_height="50dp"
        />

    <Button
        android:text="@string/clear"
        android:layout_below="@id/txtlay"
        android:layout_toRightOf="@id/commitBtn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        />
</RelativeLayout>
